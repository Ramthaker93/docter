<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrol_item_Layout1"

        >



        <LinearLayout

            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/boder"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unwish"
                android:layout_gravity="right"
                android:id="@+id/wish"
                />
            <ImageView

                android:id="@+id/scroll_image_view"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />
            <TextView
                android:id="@+id/gg"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:textColor="#000"
                android:text="TextView" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:id="@+id/selling_price"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="TextView"
                android:textColor="#000"
                android:textStyle="bold"
                />
                <TextView
                    android:id="@+id/price"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#999"
                    android:text="TextView"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/discount"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1e86d6"
                    android:textSize="10dp"
                    android:text="TextView" />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:textSize="12dp"
                android:drawableRight="@drawable/star"
                android:textColor="#fff"
                android:background="#1e86d6"
                android:text="4.2"
                android:id="@+id/rate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/health"
                    />
                <TextView
                    android:textSize="12dp"

                  android:layout_marginLeft="5dp"
                    android:text="No cost EMI and More"
                    android:id="@+id/emi"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
